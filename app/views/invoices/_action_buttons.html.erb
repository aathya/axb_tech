<div class="row action-button-margins">
  <div class="col-md-3">
    <button type="button" class= "btn btn-outline-primary btn-md" data-toggle="modal" data-target="#ModalAddInvoice">Add a new bill</button>
  </div>
  <div class="col-md-3">
    <%= link_to "Show All Bills", root_path, class: "btn btn-outline-primary btn-md" %>
  </div>
  <div class="col-md-3">
    <%= link_to "Show Collected Bills", invoices_path(bill: "collected_bills"), class: "btn btn-outline-primary btn-md" %>
  </div>
  <div class="col-md-3">
    <%= link_to "Show Pending Bills", invoices_path(bill: "pending_bills"), class: "btn btn-outline-primary btn-md" %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="ModalAddInvoice" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Invoice</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="errors_invoice">
        </div>
        <%= render "form" %>
      </div>
    </div>
  </div>
</div>
